<% if @user.errors.any? %>
  <div class="error-explanation panel panel-danger">
    <div class="panel-heading">
      <h4>
        Please fix the following 
        <%= pluralize(@user.errors.count, 'problem') %>.
      </h4>
    </div>
    <div class="panel-body">
      <ul>
        <% @user.errors.full_messages.each do | error | %>
          <li><%= error %></li>
        <% end %>
      </ul>          
    </div>
  </div>
<% end %>