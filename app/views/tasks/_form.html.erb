<%= form_for(@task) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <label for="is-completed-checkbox">Has been completed?</label>
    <input type="checkbox" name="has_been_completed" id="has_been_completed"
      <% if @task.completed? %>checked<% end %> />
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
