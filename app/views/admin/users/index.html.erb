<% title "Users", tagline: "of My Web Brain" %> 

<table class="table" id="users">
  <thead>
    <tr>
      <th>Email Address</th>
      <th>Joined</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do | user | %>
      <tr>
        <td><%= user.email %></td>
        <td><%= time_ago_in_words(user.created_at) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
